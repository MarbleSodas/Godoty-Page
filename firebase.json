{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "/builds/**/*.zip",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "application/zip"
                    },
                    {
                        "key": "Content-Disposition",
                        "value": "attachment"
                    }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}